<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Button Style -->
    <style name="CustomButtonStyle">
        <item name="android:backgroundTint">@color/colorAccentGreen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/intersemi</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Custom TextView Style for Headings -->
    <style name="HeadingTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/intersemi</item>
    </style>


    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/outline_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">6dp</item>
    </style>

    <style name="ShapeAppearance.Corner20dp" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ActionCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>  <item name="android:layout_height">0dp</item> <item name="android:layout_rowWeight">1</item> <item name="android:layout_columnWeight">1</item> <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">#33000000</item> <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>


    </style>

    <style name="ActionCardLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item> </style>

    <style name="ActionCardTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionCardDescription" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#E0E0E0</item> <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="ActionCardButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="backgroundTint">@color/colorAccentGreen</item> <item name="cornerRadius">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item> </style>


</resources>
